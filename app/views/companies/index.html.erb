<h1>Company Information</h1>
<div class="row">
  <div class="col-md-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th><%= link_to "Name", "/companies?sortby=name" %></th>
          <th><%= link_to "Email", "/companies?sortby=email" %></th>
          <th><%= link_to "Zipcode", "/companies?sortby=zip_code" %></th>
          <th><%= link_to "Phone Number", "/companies?sortby=phone" %></th>
          <th><%= link_to "Description", "/companies?sortby=description" %></th>
          <th><%= link_to "Website", "/companies?sortby=url" %></th>
          <th><%= link_to "Status", "/companies?sortby=status" %></th>
        </tr>
      </thead>
      <tbody>
      <% @companies.each do |company| %>
        <tr>
          <td>
            <a href='/companies/<%= company.id %>/edit'>
              <%= company.name %>
            </a>
          </td>
          <td><%= company.email %></td>
          <td><%= company.shorten_zip_code %></td>
          <td><%= company.phone %></td>
          <td><%= company.description %></td>
          <td><%= company.url %></td>
          <td><%= company.status %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
